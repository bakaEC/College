    <!-- 描边  android:width边线的粗细 android:color边线的颜色-->
    <stroke android:width="3dp" android:color="#23de12" ></stroke>
	<corners 
	    android:topLeftRadius="25dp"
	    android:topRightRadius="30dp"
	    android:bottomLeftRadius="35dp"
	    android:bottomRightRadius="40dp"
	    />
	
	  <!--  android:paddingLeft="10dp"等同于<padding android:left="10dp"/> -->
